<Application
    x:Class="ConsumptionWatchList.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConsumptionWatchList"
    xmlns:converters="using:ConsumptionWatchList.Converters"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:BooleanToVisibilityConverter x:Key="TrueToVisibleConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="FalseToVisibleConverter" IsReversed="True"/>
            <converters:NullToVisibleConverter x:Key="NullToVisibleConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
